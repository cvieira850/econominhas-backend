{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": ".",
	"testRegex": ".*\\.spec\\.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"collectCoverageFrom": [
		"src/**/*.(t|j)s",
		"!src/app.module.ts",
		"!src/config.ts",
		"!src/main.ts",
		"!src/models/*.ts",
		"!src/adapters/*.ts",
		"!src/repositories/postgres/*.ts",
		"!src/types/*.ts"
	],
	"coverageDirectory": "./coverage",
	"testEnvironment": "node",
	"moduleDirectories": ["node_modules", "src"],
	"setupFiles": ["./tests/setup.ts"]
}
